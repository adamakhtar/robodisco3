//= javascript_include_tag "live_search_form.js"
= render :partial => "shared/nav", :locals => {:small_version => false}
%div#container.fixed_width
  %div#live_search_results
    - unless @albums.empty?
      - @albums.each_pair do |artist_name, albums|
        %div.result_box
          %h2
            = artist_name
          - albums.each do |album|
            %div.name
              = link_to album.title, play_album_path(:mb_id => album.mb_id)
