!!!
%html
%head
  %title Robodisco.fm
  = stylesheet_link_tag :all
  = javascript_include_tag  "jquery", "jquery.color.js",  "jquery.inspect.js", "jquery.pulse.js",
                            "swfobject", "jQuery.tubeplayer.min.js", "application", "favourite_button_to.js",
                            "player.js", "search_form.js"
  = csrf_meta_tag
%body
  %div.container
    %div#user_nav
      - if user_signed_in?
        = "Signed in as #{current_user.email}. Not you?"
        = link_to "Sign out", destroy_user_session_path
      - else
        = link_to "Sign up", new_user_registration_path
        or
        = link_to "Sign in", new_user_session_path

    - flash.each do |name, msg|
      = content_tag :div, msg, :id => "flash_#{name}"
    = yield
