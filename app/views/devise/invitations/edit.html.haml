= render :partial => "shared/nav", :locals => {:small_version => true}
#authentication.container
  %div.panel.m_rounded_corners.box_shadow
    %div.m_top_rounded_corners.m_header
      %h1 Setup your account
    = form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put, :class => "content m_bottom_rounded_corners"} do |f|
      = devise_error_messages!
      = f.hidden_field :invitation_token
      %p
        = f.label :username
        %br/
        = f.text_field :username
      %p
        = f.label :password
        %br/
        = f.password_field :password
      %p
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation
      %p= f.submit "Create my account"
