= render :partial => "shared/nav", :locals => {:small_version => true}
#authentication.container
  %div.panel.m_rounded_corners.box_shadow
    %div.m_top_rounded_corners.m_header
      %h1 Send an invitation
    = form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html =>  {:class => "content m_bottom_rounded_corners"} do |f|
      = devise_error_messages!
      %p
        = "Currently you can send #{resource.invitation_limit} invitation(s)"
      %p
        = f.label :email
        %br/
        = f.text_field :email
      %p= f.submit "Send an invitation"
      = link_to "Home", after_sign_in_path_for(resource_name)

